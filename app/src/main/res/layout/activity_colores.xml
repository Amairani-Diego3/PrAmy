<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Colores">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E91E63"
                    android:gravity="center"
                    android:text="Colors"
                    android:textColor="#090909"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/regresarAbecedario"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="#00FFFFFF"
                    android:onClick="regresarColors"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/regresar" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="452dp"
                    app:srcCompat="@drawable/colores1" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="215dp"
                    app:srcCompat="@drawable/colores3" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="512dp"
                    app:srcCompat="@drawable/colores2" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>